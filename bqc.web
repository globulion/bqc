      read(INPUT_UNIT,*) charge, multiplicity
      read(INPUT_UNIT,*) nelec                                       /* number of electrons */
      read(INPUT_UNIT,*) ncmx, nbfns, ngmx                           /* number of atoms, bfns and GTFs */
