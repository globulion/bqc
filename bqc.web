               SOO = pitern*(t**onep5)*eta(ii,5)*eta(jj,5)
               t = half*t
               t1 = dfact(l+1)*t**l
               t2 = dfact(m+1)*t**m
               t3 = dfact(n+1)*t**n
               sum = sum + gtoC(ii)*gtoC(jj)*SOO*t1*t2*t3
            end do
         end do
         sum = one / dsqrt(sum)
         do ii = js, jf
            gtoC(ii) = gtoC(ii) * sum
         end do
      end do
 
      do ii = 1, ngmx
         eta(ii,5) = eta(ii,5) * gtoC(ii)
      end do
